        }

        function getCategoryData() {

            var url = commonUtility.baseUrl + "Category";
            commonUtility.ajaxGetCall(url, setCategoryList);
        }

        function generateAttribute(data) {
            $("#DIV").html('');
            $("#Table").find("tr:gt(0)").remove();
            $("#Table").show();
            var DIV = '';
            $.each(data, function (i, item) {
                var rows = "<tr>" +
                    "<td style='text-align:center;'>" + item.AttributeName + "</td>" +
                    "<td><input type='text' class='requiredField' id='" + item.AttributeId + "'></td>" +
                    "</tr>";
                $('#Table').append(rows);
            }); //End of foreach Loop
        }

        function setCategoryList(data) {
            $.each(data, function () {
                $("#category").append($("<option     />").val(this.CategoryId).text(this.CategoryName));
            });
        }

        function getProductLookUp(categoryId) {

            var url = commonUtility.baseUrl + "ProductLookUp/" + categoryId;
            commonUtility.ajaxGetCall(url, generateAttribute);
        }

        function isValidUser() {

            var isValidate = true;
            var userEmail = $.trim($("#userEmail").val());
            var userPassword = $.trim($("#userPassword").val());
            var userConfirmPassword = $.trim($("#userConfirmPassword").val());


            if (userEmail.length== 0) {
                isValidate = false;
                alert("Please enter User Email.");
                return isValidate;

            }

            if (userPassword.length == 0) {
                isValidate = false;
                alert("Please select Product category.");
                return isValidate;

            }

            if (userPassword != userConfirmPassword) {
                isValidate = false;
                alert("Password should be match");
                return isValidate;

            }

            return isValidate;

        }


    });
</script>